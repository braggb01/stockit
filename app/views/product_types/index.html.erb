<h1>Listing product_types</h1>

<table>
  <tr>
    <th>Prod number</th>
    <th>Prod desc</th>
    <th>Brand</th>
    <th>Total quantity</th>
    <th>Needed quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product_types.each do |product_type| %>
  <tr>
    <td><%= product_type.prod_number %></td>
    <td><%= product_type.prod_desc %></td>
    <td><%= product_type.brand %></td>
    <td><%= product_type.total_quantity %></td>
    <td><%= product_type.needed_quantity %></td>
    <td><%= link_to 'Show', product_type %></td>
    <td><%= link_to 'Edit', edit_product_type_path(product_type) %></td>
    <td><%= link_to 'Destroy', product_type, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

