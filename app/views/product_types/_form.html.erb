<%= form_for(@product_type) do |f| %>
  <% if @product_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_type.errors.count, "error") %> prohibited this product_type from being saved:</h2>

      <ul>
      <% @product_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <div class="clearfix">
    <%= f.label "Product ID:" %>
	<div class="input">
    	<%= f.text_field :prod_number, :class => "xlarg" %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label "Description:" %>
	<div class="input">
    	<%= f.text_area :prod_desc, :class => "xlarge", :rows => 3 %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label "Manufacturer:" %>
	<div class="input">
    	<%= f.text_field :brand, :class => "xlarg" %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label "Stock Available:" %>
	<div class="input">
    	<%= f.number_field :total_quantity %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label "Stock Desired:" %>
	<div class="input">
    	<%= f.number_field :needed_quantity %>
	</div>
  </div>
  <div class="clearfix">
    <div class="input">
      <%= f.submit :class => "btn primary" %>
    </div>
  </div>
  </fieldset>
<% end %>
