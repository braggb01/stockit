<% content_for :sidebar do %>
  <%= render :partial => 'sidebar-new' %>
<% end %>

<% content_for :content do %>
<div class="content">
  <% if flash[:notice] %>
  <div class="alert-message success">
    <%= link_to "x", product_type_path(@product_type), :class => "close" %>
    <p id="notice"><%= notice %></p>
  </div>
  <% end %>
  <div class="pull-right">
    <%= link_to 'Edit', edit_product_type_path(@product_type), :class => "btn primary"  %> 
    <%= link_to 'Back', product_types_path, :class => "btn primary"  %>
  </div>
  <div class="row">
    <div class="span12">
      <h1><%= @product_type.prod_number %></h1>
      <div class="row">
        <div class="span12">
          <p>
            <b>Product #:</b>
            <%= @product_type.prod_number %>
          </p>
          <p>
            <b>Prod desc:</b>
            <%= @product_type.prod_desc %>
          </p>
          <p>
            <b>Brand:</b>
            <%= @product_type.brand %>
          </p>

          <p>
            <b>Total quantity:</b>
            <%= @product_type.total_quantity %>
          </p>

          <p>
            <b>Needed quantity:</b>
            <%= @product_type.needed_quantity %>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
