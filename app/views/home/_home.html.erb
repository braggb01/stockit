<% content_for :nocontent do %>
<div style="margin:auto;min-height:700px;width:980px;">
  <div class="modal" id="logitin" >
    <div class="modal-header">
        <h3>Please Login</h3>
    </div>
    <div class="modal-body">
      <%= form_tag sessions_path do %>
      <fieldset>
        <div class="clearfix">
          <%= label_tag :email %>
          <div class="input">
            <%= text_field_tag :email, params[:email] %>
          </div>
        </div>
        <div class="clearfix">
          <%= label_tag :password %>
          <div class="input">
            <%= password_field_tag :password %>
          </div>
        </div>
        <div class="clearfix">
          <div class="input">
            <%= submit_tag "Log in", :class => "btn primary" %>
          </div>
        </div>
      </fieldset>
      <% end %>
    </div>
  </div>
</div>
<% end %>