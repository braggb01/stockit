<script>
  $(function () {
    $("a[rel=twipsy]").twipsy({
      // live: true
      animate: false
    })
  })
</script>
<script>
  $(function () {
    $("a[rel=nofollow]").twipsy({
      live: true
    })
  })
</script>
<script>
  $(function () {
    $("input[rel=twipsy]").twipsy({
      // live: true
      animate: false
    })
  })
</script>
<script>
  $(function () {
    $("a[rel=popover]")
      .popover({
        offset: 10,
        html: true
      })
    .hover(function(e) {
      e.preventDefault()
    })
  }) 
</script>

<script>
// iOS scale bug fix
MBP.scaleFix();

// Respond.js
yepnope({
  test : Modernizr.mq('(only all)'),
  nope : ['<%= asset_path 'respond.min.js' %>']
});
</script>
<!-- END SCRIPTION -->

</body>
<% else %>
  <%= yield :nocontent %>
<% end %>
</html>