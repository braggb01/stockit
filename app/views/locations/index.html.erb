<% if Location.count.zero? %>
  <% content_for :empty do %>
    <div class="blank_slate_container">
      <span class="blank_slate">
        There are no Locations yet.  <%= link_to 'Create One', new_location_path %>
      </span>
    </div>
  <% end %>
<% else %>
  <% content_for :sidebar do %>
    <%= render :partial => 'sidebar' %>
  <% end %>

  <% content_for :content do %>
    <div class="box twothirds">
      <div class="boxheading clearfix">
        <h3>Locations</h3>
        <a class="move"></a>
      </div>
      <section>
        <table class="zebra-striped bordered-table">
          <thead>
            <tr>
				<th>Room</th>
				<% if can? :update, Location %><th class="action-buttons">Actions</th><% end %>
            </tr>
          </thead>
          <tbody id="tablehead">
            <%= render :partial => "location", :collection => @locations %>
          </tbody>
        </table>
        <div>
        	<%= paginate @locations%>
        </div>
        <script type="text/javascript" id="js">
          $(document).ready(function(){
            $('#formshow').click(function() {
              $('#form').toggle('blind', 500,function() {
                
              });
            });
            $('#formnoshow').click(function() {
              $('#form').hide(function() {
                
              });
            });
          });
        </script>

        <script type="text/javascript" id="js">
          $(document).ready(function(){
            $('#footerformshow').click(function() {
              $('#form').toggle('blind', 500,function() {
                
              });
            });
            $('#formnoshow').click(function() {
              $('#form').hide(function() {
                
              });
            });
          });
        </script>
      </section>
    </div>
  <% end %>
<% end %>

<% content_for :footer do %>
  <li>
    <%= link_to(new_location_path, :remote => true, :id => "footerformshow") do %>
      <%= image_tag('addit.png') %>
      <span><h4 style="display:inline;">Create Location</h4></span>
    <% end %>
  </li>
<% end %>
