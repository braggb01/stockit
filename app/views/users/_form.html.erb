      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row line narrow clearfix">
    <%= f.label "Username:" %>
    <div class="r">
      <%= f.text_field :username %>
    </div>
  </div>
  <div class="row line narrow clearfix">
    <%= f.label "Email:" %>
    <div class="r">
      <%= f.text_field :email %>
    </div>
  </div>
  <% unless :action => 'new' %>
  <div class="row line narrow clearfix">
    <%= f.label "Password:" %>
    <div class="r">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="row line narrow clearfix">
    <%= f.label "Password Confirmation:" %>
    <div class="r">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <% end %>
  <div class="row line narrow clearfix">
    <%= f.label "Admin:" %>
    <%= f.check_box :admin %>
  </div>
  <div class="row line narrow clearfix">
    <%= f.label "Engineer:" %>
    <%= f.check_box :engineer %>
  </div>

      <%= f.submit :class => "btn blue submit mt15", :id => "formnoshow" %>

  <% end %>
