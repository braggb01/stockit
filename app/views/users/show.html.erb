<% content_for :sidebar do %>

<% end %>

<% content_for :content do %>
<div class="content">
	<% if flash[:notice] %>
	<div class="alert-message success">
		<%= link_to "x", user_path(@user), :class => "close" %>
		<p id="notice"><%= notice %></p>
	</div>
	<% end %>
	<div class="pull-right">
		<%= link_to 'Edit', edit_user_path(@user), :class => "btn primary"  %> 
		<%= link_to 'Back', users_path, :class => "btn primary"  %>
	</div>
	<div class="row">
		<div class="span12">
			<h1><%= @user.username %></h1>
			<div class="row">
				<div class="span12">
					<p>
  					<b>Email:</b>
  					<%= @user.email %>
					</p>
					<p>
  					<b>Admin?:</b>
  					<%= @user.admin %>
					</p>
				</div>
			</div>
		</div>
	</div>
<% end %>