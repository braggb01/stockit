<% content_for :sidebar do %>

<% end %>

<% content_for :content do %>
<div class="box onethird">&nbsp;</div>
<div class="box midthirds">
  <div class="boxheading clearfix">
    <h3><%= @user.username %>'s Profile</h3>
    <%= link_to "", users_path, :class => "prev" %>
  </div>
  <section>
    <div class="row">
      <p>
        <b>Email Address:</b>
        <%= @user.email %>
      </p>
    </div>
    <div class="row">
      <p>
        <b>Admin Privileges:</b>
        <%= @user.admin %>
      </p>
    </div>
    <div class="row">
      <p>
        <b>Engineer Privileges:</b>
        <%= @user.engineer %>
      </p>
    </div>
    <div class="pt15">
	    <p>
	      <%= link_to 'Edit', edit_user_path(@user), :class => "btn blue pt20"  %>
	    </p>
    </div>
  </section>
</div>
<div class="box onethird">&nbsp;</div>
<% end %>