<% content_for :sidebar do %>
<%= render :partial => 'sidebar' %>
<% end %>

<% content_for :content do %>
<div class="content">

  <table class="zebra-striped bordered-table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Admin Privileges</th>
        <th class="action-buttons">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Show', user,:class => "btn success" %>&nbsp;<%= link_to 'Edit', edit_user_path(user),:class => "btn primary" %>&nbsp;<%= link_to 'Destroy', user,:class => "btn danger", confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>


<script type="text/javascript" id="js">
  $(document).ready(function() {
    $('#my-modal').modal({
   show : true,
   keyboard : true,
   backdrop : true
});
</script>

<div class="modal hide fade" id="my-modal" >
  <div class="modal-header">
    <%= link_to 'x', users_path, :class => 'close' %>
      <h3><%= action_name.capitalize %> User</h3>
  </div>
  <div class="modal-body">
      <%= render 'form' %>
  </div>

</div>

<% end %>