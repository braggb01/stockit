<div class="sidebar">
  <div class="well-sidebar">
    <h5 class="light">Filters</h5><hr>
    <%= search_form_for @q, :html => { :class => "form-stacked" } do |f| %>
      <fieldset>
        <div class="clearfix">
          <%= f.label "Purchases:" %>
          <div class="input">
            <%= f.text_field :po_number_cont, :class => "span3" %>
          </div>
        </div>
        <div class="clearfix">
          <%= f.submit :class => "btn success" %> &nbsp; <%= link_to "Reset", purchases_path, :class => "btn danger" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>